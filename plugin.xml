<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="de.appplant.cordova.plugin.badge"
        version="0.2.0">

    <name>Badge</name>

    <description>A bunch of badge plugins for Cordova 3.x.x</description>
    <keywords>badge, ios</keywords>
    <license>GPL v2 License</license>

    <author>Sebasti√°n Katzer (github.com/katzer)</author>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>

    <!-- ios -->
    <platform name="ios">

        <config-file target="config.xml" parent="/*">
		<feature name="Badge">
			<param name="ios-package" value="APPBadge"/>
		</feature>
        </config-file>

        <js-module src="www/badge.js" name="Badge">
            <clobbers target="plugin.badge" />
        </js-module>

	<header-file src="src/ios/APPBadge.h" />
	<source-file src="src/ios/APPBadge.m" />

    </platform>

</plugin>
